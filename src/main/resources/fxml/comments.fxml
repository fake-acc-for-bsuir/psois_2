<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefHeight="600" prefWidth="389">
    <HBox styleClass="header" alignment="CENTER_LEFT">
        <Label styleClass="header_title">Comments</Label>
        <HBox HBox.hgrow="ALWAYS"/>
        <Button fx:id="goToCreateCommentButton" styleClass="hl_action_button" onAction="#goToCreateComment"/>
        <Button fx:id="goBackFromCommentsButton" styleClass="hl_action_button" onAction="#goBackFromComments"/>
    </HBox>
    <VBox spacing="10" fx:id="commentsBlock" VBox.vgrow="ALWAYS">
        <padding>
            <Insets top="5" left="5" right="5" bottom="5"/>
        </padding>

    </VBox>
</VBox>